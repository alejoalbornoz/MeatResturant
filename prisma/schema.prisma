generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Reservation {
  id          Int      @id @default(autoincrement())
  code        String   @unique
  tableNumber Int
  date        DateTime
  time        String
  name        String
  surname     String
  phoneNumber String
  email       String?
  numberOfPeople Int?
  createdAt   DateTime @default(now())
  expiresAt   DateTime
  status      String   @default("active") // active | cancelled
}